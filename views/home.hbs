{{#if removedUser}}
<div class="alert alert-info alert-dismissible fade show" role="alert">
   The Expense Has Been Deleted Successfully.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}


<div class="row">
  <div class="col-6"><h1>Expenses..</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-outline-primary align-self-center">+ New Expense</a>
  </div>
</div>


<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th style="background-color: lightgrey;" scope="col">Id</th>
      <th style="background-color: lightgrey" scope="col">Name</th>
      <th style="background-color: lightgrey" scope="col">Item</th>
      <th style="background-color: lightgrey;" scope="col">Category</th>
      <th style="background-color: lightgrey;" scope="col">Expense (In Rs.)</th>
      <th style="background-color: lightgrey" scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.Id}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Item}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Expense}}</td>
      <td class="text-center">

        <a href="/edituser/{{this.Id}}" type="button" class="btn btn-outline-primary btn-small"><i class="bi bi-pencil"></i> Edit</a>
        <a href="{{this.Id}}" type="button" class="btn btn-outline-danger btn-small"><i class="bi bi-person-x"></i> Delete</a>

      </td>
    </tr>
    {{/each}}
  </tbody>
</table>